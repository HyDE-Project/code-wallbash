{
  "name": "wallbash",
  "displayName": "Wallbash",
  "description": "VSCode dynamic theme using wallbash",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/HyDE-Project/vscode-wallbash",
    "issues": "https://github.com/HyDE-Project/vscode-wallbash/issues",
    "pulls": "https://github.com/HyDE-Project/vscode-wallbash/pulls"
  
  },
    "license": "GPL",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "wallbash",
    "dynamic",
    "hyde",
    "hyprland"
  ],
  "icon": "hyde.png",
  "activationEvents": [ "wallbash.update" ] ,
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wallbash.update",
        "title": "Reload Wallbash Colors",
        "category": "Color Update"
      }
    ],
    "configuration": {
      "title": "Wallbash",
      "properties": {
        "wallbash.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Update automatically the theme when the wallbash color palette changes"
        }
      }
    },
    "themes": [
      {
        "label": "Wallbash",
        "uiTheme": "vs-dark",
        "path": "./themes/wallbash.json",
        "_watch": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "chokidar": "^3.5.2"
  }
}
